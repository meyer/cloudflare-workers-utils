{
  "include": [
    "${configDir}/src/**/*.ts"
  ],
  "exclude": [
    "${configDir}/src/**/*.test.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "${configDir}/src",
    "outDir": "${configDir}/dist",
    "tsBuildInfoFile": "${configDir}/dist/build.tsbuildinfo",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "ESNext.Promise"
    ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "types": [
      "@cloudflare/workers-types"
    ],
    "paths": {
      "@workers-utils/bungie": [
        "packages/bungie"
      ],
      "@workers-utils/common": [
        "packages/common"
      ],
      "@workers-utils/discord": [
        "packages/discord"
      ]
    }
  }
}
